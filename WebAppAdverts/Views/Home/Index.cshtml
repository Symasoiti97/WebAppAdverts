@model IndexViewModel
@{
    ViewData["Title"] = "Adverts";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-2 form-group">
        <form method="get">
            <label class="control-label">Author: </label>
            <input type="text" name="nameSearch" asp-for="FilterViewModel.Name" class="form-control" />
            <label class="control-label">Content: </label>
            <input type="text" name="contentSearch" asp-for="FilterViewModel.Content" class="form-control" />
            <br>
            <input class="btn btn-default" type="submit" value="Search" />
        </form>
        <div class="btn-group-vertical" role="group">
            <br>
            <a class="btn btn-primary"
               asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NameSort)"
               asp-route-nameSearch="@(Model.FilterViewModel.Name)"
               asp-route-contentSearch="@(Model.FilterViewModel.Content)">
                NameSort
            </a>
            <br>
            <a class="btn btn-primary"
               asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.RatingSort)"
               asp-route-nameSearch="@(Model.FilterViewModel.Name)"
               asp-route-contentSearch="@(Model.FilterViewModel.Content)">
                RatingSort
            </a>
            <br>
            <a class="btn btn-primary"
               asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.DateSort)"
               asp-route-nameSearch="@(Model.FilterViewModel.Name)"
               asp-route-contentSearch="@(Model.FilterViewModel.Content)">
                DateSort
            </a>
            <br>
            <a class="btn btn-primary"
               asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NumberSort)"
               asp-route-nameSearch="@(Model.FilterViewModel.Name)"
               asp-route-contentSearch="@(Model.FilterViewModel.Content)">
                NumberSort
            </a>
        </div>
    </div>

    <div class="col-md-10">
        @foreach (var advert in Model.Adverts)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <form method="get">
                        <label>Number: @advert.Number</label>
                        <label>Date added: @advert.DateTime.ToLongDateString()</label>
                        <label>Author: @advert.User.Name</label>
                        <label>Rating: @advert.Rating</label>
                        <div class="navbar-right">
                            <label class="btn btn-default btn-xs">
                                <a class="text-primary" asp-controller="Home" asp-action="Edit" asp-route-advertId="@advert.Id">Edit</a>
                            </label>
                            <label class="btn btn-default btn-xs">
                                <a class="text-danger deleteAdvert" asp-controller="Home" asp-action="DeleteModal" asp-route-advertId="@advert.Id">Delete</a>
                            </label>
                        </div>
                    </form>
                </div>
                <div class="panel-body">
                    <div class="col-md-2">
                        @if (advert.Image != null)
                        {
                            <a href="@Url.Content(advert.Image)" data-lightbox="@advert.Id">
                                <img class="img-thumbnail" src="@Url.Content(advert.Image)" alt=""/>
                            </a>
                        }
                    </div>
                    <div class="col-md-8 ">
                        <div>@advert.Content</div>
                    </div>
                </div>
            </div>
            <br>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <a asp-action="Index"
               asp-route-currentPage="@(Model.PageViewModel.PageNumber - 1)"
               asp-route-name="@(Model.FilterViewModel.Name)"
               asp-route-company="@(Model.FilterViewModel.Content)"
               asp-route-sortorder="@(Model.SortViewModel.CurrentSort)"
               class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Назад
            </a>
        }
        @if (Model.PageViewModel.HasNextPage)
        {
            <a asp-action="Index"
               asp-route-currentPage="@(Model.PageViewModel.PageNumber + 1)"
               asp-route-name="@(Model.FilterViewModel.Name)"
               asp-route-company="@(Model.FilterViewModel.Content)"
               asp-route-sortorder="@(Model.SortViewModel.CurrentSort)"
               class="btn btn-default">
                Вперед
                <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".deleteAdvert").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}